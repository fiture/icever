<% include header %>
  <h1><a href="/" title="fiture.me"><%= title %></a></h1>
  <div class="post-item">
    <h2><a href="/post/<%= post.postname %>"><%= post.title %></a></h2>
    <p class="post-meta">
      <b>Author:</b> <%= post.author.nickname %>,
      <b>Date:</b> <%= post.date.toDateString() %>

      <% if (post.tag.length) { %>
      <b>, Tag:</b> <%= post.tag %>.
      <% } %>
      <a href="/post/<%= post._id %>/delete">Delete</a>
    </p>
    <p class="post-content"><%- post.content %></p>
  </div>
<% include footer %>