<% include header %>
  <h1><a href="/" title="fiture.me"><%= title %></a></h1>
  <div class="new-post">
    <h2>New Post:</h2>
    <form action="/post/new" method="POST">
      <div class="form-control-group">
        <label class="form-control-label" for="title">Title: </label>
        <input type="text" id="title" name="title" />
      </div>
      <div class="form-control-group">
        <label class="form-control-label" for="content">Content: </label>
        <textarea rows="10" id="content" name="content"></textarea>
      </div>
      <div class="form-control-group">
        <label class="form-control-label" for="tag">Tags(split with comma): </label>
        <input type="text" id="tag" name="tag" />
      </div>
      <div class="form-control-group">
        <button type="submit">Create New Post!</button>
      </div>
    </form>
  </div>
<% include footer %>